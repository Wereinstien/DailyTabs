{

	"name": "Daily Tabs",
	"version": "1.3",
	"description": "Open the tabs you need immediately.",
	"permissions": ["activeTab", "storage", "tabs", "<all_urls>", "declarativeContent"],
	"options_page":"options.html",

	"background": {
       "scripts": ["Daily_Tabs.js"],
       "persistent": false
     },

	"page_action":{
		"default_popup": "popup.html",
		"default_icon": {
			"16": "images/get_started16.png",
			"32": "images/get_started32.png",
			"48": "images/get_started48.png",
			"128": "images/get_started128.png"
		}
	},

	"icons": {
		"16": "images/get_started16.png",
		"32": "images/get_started32.png",
		"48": "images/get_started48.png",
		"128": "images/get_started128.png"
	},

	"manifest_version": 2

}
